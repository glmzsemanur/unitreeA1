<launch>
  <arg name="map_file" default="$(find elevation_mapping_demos)/maps/my_global_map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find elevation_mapping_demos)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find elevation_mapping_demos)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find elevation_mapping_demos)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find elevation_mapping_demos)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find elevation_mapping_demos)/config/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find elevation_mapping_demos)/config/move_base_params.yaml" command="load" />
  </node>
  <node pkg="tf2_ros" type="static_transform_publisher" name="map_odom_broadcaster" args="0 0 0 0 0 0 map odom" />
</launch>
